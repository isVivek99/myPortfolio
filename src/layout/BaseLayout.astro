---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import NavbarMobile from "../components/NavbarMobile.astro";
import SEOComponent from "../components/SEOComponent.astro";
import type { SEOConfig } from "../utils/seoConfigs";

export interface Props {
  pageTitle?: string;
  seo?: SEOConfig;
}

const { pageTitle, seo } = Astro.props;
---

<html lang="en" id="index" class="dark bg-black">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="dark" />

    <!-- SEO Component -->
    <SEOComponent {...seo} />

    <!-- Fallback title if no SEO config provided -->
    {
      !seo && (
        <title>{pageTitle || "Vivek Lokhande - Full Stack Developer"}</title>
      )
    }
  </head>
  <body class="flex min-h-screen flex-col bg-black font-sans text-white">
    <main class="container mx-auto px-4 pt-16 sm:px-8 md:px-4 md:pt-0 lg:px-2">
      <div class="hidden md:block">
        <Navbar />
      </div>
      <div class="flex justify-end md:hidden">
        <NavbarMobile />
      </div>
      <slot />
    </main>
    <Footer />
  </body>
</html>
